<h2>Merchant Store</h2>

<ul>
  <li><%= "Merchant Name: #{@merchant.merchant_name}" %></li>
  <li><%= "Email: #{@merchant.merchant_email}" %></li>
  <li><%= "Username: #{@merchant.username}" %></li>
  <% if @current_user && @current_user.id == @merchant.id %>
    <li><%= link_to "Add Product", new_product_path %> </li>
    <li><%= link_to "Edit Merchant", edit_merchant_path %> </li>
    <li><%= link_to "Delete Merchant", merchant_path, method: :delete %> </li>
  <% end %>
</ul>

<div><%= link_to "Order List", product_orders_path(product_id: ), class: "button" %></div>
