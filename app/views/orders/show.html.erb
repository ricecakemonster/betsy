<table>

  <tr>
    <td>Order number </td>
    <td> <%= @order.id %></td>
  </tr>
  <tr>
  <tr>
    <td>Purchase Date </td>
    <td> <%= @order.created_at %></td>
  </tr>
  <tr>
    <td>Name </td>
    <td><%= @order.cc_name %></td>
  </tr>
  <tr>
    <td>Email </td>
    <td><%= @order.order_email %></td>
  </tr>
  <tr>
    <td>Address </td>
    <td><%= @order.mailing_address%></td>
  </tr>
  <tr>
    <td>Status</td>
    <td><%= @order.status%></td>
  </tr>
  <tr>
    <td>Order Fulfillment Status</td>
    <td>
      <%= form_for @orderproduct, url: product_update_path(@product.id, @order.id) do |f| %>
        <%= f.select :status, [ 'processing', 'shipped' ], prompt: @orderproduct.status %>
        <%= f.submit "Update", class: 'button', method: :patch%>
      <% end %>
    </td>
  </tr>
<%# end %>
</table>
