<table class = "order_table">

  <tr>
    <td>Order number </td>
    <td> <%= @order.id %></td>
  </tr>
  <tr>
  <tr>
    <td>Purchase Date </td>
    <td> <%= @order.created_at %></td>
  </tr>
  <tr>
    <td>Name </td>
    <td><%= @order.cc_name %></td>
  </tr>
  <tr>
    <td>Email </td>
    <td><%= @order.order_email %></td>
  </tr>
  <tr>
    <td>Address </td>
    <td><%= @order.mailing_address%></td>
  </tr>
  <tr>
    <td>Order Status</td>
    <td><%= @order.status%></td>
  </tr>

<% @order.orderproducts.each do |orderproduct| %>
  <tr>
        <td><%= Product.find_by(id: orderproduct.product_id).product_name %></td>
        <td><%= orderproduct.status %></td>
    <% end %>
  </tr>
</table>
